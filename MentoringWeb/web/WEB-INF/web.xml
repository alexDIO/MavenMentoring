<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <servlet>
        <servlet-name>MyHttpServlet1</servlet-name>
        <servlet-class>servletsandfilters.MyHttpServlet1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyHttpServlet1</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>servletsandfilters.MyServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/servlet/init/http</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyHttpServlet2</servlet-name>
        <servlet-class>servletsandfilters.MyHttpServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyHttpServlet2</servlet-name>
        <url-pattern>/servlet/init</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MyFilter2</filter-name>
        <filter-class>servletsandfilters.MyFilter2</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter2</filter-name>
        <url-pattern>/servlet</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MyFilter1</filter-name>
        <filter-class>servletsandfilters.MyFilter1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter1</filter-name>
        <url-pattern>/servlet</url-pattern>
    </filter-mapping>
</web-app>